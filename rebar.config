%% Common project erlang options.
{erl_opts, [

    % mandatory
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function,

    % at will
    % bin_opt_info
    % no_auto_import,
    warn_missing_spec_all
]}.

%% XRef checks
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.
% at will
% {xref_warnings, true}.

%% Tests
{cover_enabled, true}.

{deps, [
    {genlib,
        {git, "https://github.com/rbkmoney/genlib", {branch, master}}
    },
    {machinegun_core,
        {git, "https://github.com/rbkmoney/machinegun_core", {branch, master}}
    },
    {machinegun_woody_api,
        {git, "https://github.com/rbkmoney/machinegun_woody_api", {branch, master}}
    },
    {how_are_you,
        {git, "https://github.com/rbkmoney/how_are_you", {branch, master}}
    },
    {erl_health,
        {git, "https://github.com/rbkmoney/erlang-health", {branch, master}}
    },
    {prometheus, "4.6.0"},
    {prometheus_cowboy, "0.1.8"},

    % for configurator script
    {yamerl,
        {git, "https://github.com/rbkmoney/yamerl", {branch, master}}
    },
    {cg_mon,
        {git, "https://github.com/rbkmoney/cg_mon", {branch, master}}
    }
]}.

%% Rebar profiles
{profiles, [
    {prod, [
        {deps, [
            {logger_logstash_formatter,
                {git, "http://github.com/rbkmoney/logger_logstash_formatter.git", {branch, "master"}}},
            % for introspection on production
            {recon, "2.3.2"}
        ]},
        {relx, [
            {release, {machinegun, "0.1.0"}, [
                {recon        , load     }, % tools for introspection
                {runtime_tools, load     }, % debugger
                {tools        , load     }, % profiler
                {logger_logstash_formatter, load}, % log formatter
                {machinegun   , permanent}  % main app
            ]},
            {mode, minimal},
            {extended_start_script, true},
            {overlay, [
                {template, "rel_scripts/entrypoint.sh"       , "bin/entrypoint.sh"       },
                {copy    , "rel_scripts/configurator.escript", "bin/configurator.escript"},
                {copy    , "config/config.yaml"              , "etc/config.yaml"         }
            ]}
        ]}
    ]}
]}.

%% Dialyzer static analyzing
{dialyzer, [
    {warnings, [
        % mandatory
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

{plugins, [
    {erlfmt, "0.8.0"}
]}.

{erlfmt, [
    {print_width, 120},
    {files, "{src,include,test}/*.{hrl,erl}"}
]}.

